<p id="notice"><%= notice %></p>

<div class="property-show">
  <div class="photo-main" style="background-image:url('<%= url_for( @property.photos[0]) %>')">
  </div>
  
  <div class="container mt-4">
    <div class="row">
      <div class="col-8">
        <div class="row d-flex justify-content-between">
          <div class="col-5">
            <p class="property-info m-0"><%= @property.address %></p>
            <h3><%= number_to_currency(@property.price, :locale => :en) %></h3>
          </div>

          <div class="col-6 text-center bg-light">
            <div class="row mr-2 bg-light p-2">
              <div class="col-4">
                <p class="m-0"><strong>Rooms</strong></p>
                <span><%= @property.rooms %></span>
              </div>
              <div class="col-4">
                <p class="m-0"><strong>Bedrooms</strong></p>
                <span><%= @property.bedrooms %></span>
              </div>
              <div class="col-4">
                <p class="m-0"><strong>Bathrooms</strong></p>
                <span><%= @property.bathrooms %></span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-4">
        <%= render "properties/agent_info" %>
      </div>
    </div>

    <div class="row">
      <div class="col-8 border-top border-bottom">
        <p class="mt-3">Est. Monthly Payment of <%= number_to_currency(@property.price / 360, :locale => :en) %></p>
      </div>
    </div>

    <div class="row mt-5">
      <div class="col-8">
        <h3>Property Description</h3>
        <p class="text-justify"><%= @property.description %></p>
      </div>
    </div>
  </div>
</div>

<i class="fas fa-undo-alt"></i> <%= link_to 'Back', properties_path %>

<% if account_signed_in? && @property.account_id == current_account.id %>
  <%= link_to 'Edit', edit_property_path(@property) %>
<% end %>

