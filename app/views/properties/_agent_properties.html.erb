<% properties.limit(4).each do |property| %>
  <div class="col-md-3">
    <%= link_to(property_path(property)) do %>
      <div class="product-thumb"><%= image_tag property.photos[0] %></div>
      <div class="card-product-infos border px-2">
        <h4 class="mt-1"><%= property.name %></h4>
        <p class="m-0 text-dark"><%= property.address %></p>
        <p class="m-0 text-dark"><%= @property.for_sale? ? "For Sale" : "For Rent" %></p>
        <hr>
        <div class="product-amenities d-flex mt-1">
          <p class="mr-4 text-dark"><i class="fas fa-couch fa-sm"></i> <%= property.rooms %></p>
          <p class="mr-4 text-dark"><i class="fas fa-bed fa-sm"></i> <%= property.bedrooms %></p>
          <p class="text-dark"><i class="fas fa-bath fa-sm"></i> <%= property.bathrooms %></p>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
