<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Home", root_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Listings", "#", class: "nav-link" %>
      </li>
      <% if account_signed_in? %>
        <%= link_to "Dashboard", dashboard_path, class: "nav-link" %>    
      <% else %>
        <%= link_to "Start renting", "#", class: "nav-link" %>    
      <% end %>
      
      <li class="nav-item dropdown">
        <%= image_tag "https://cdn2.iconfinder.com/data/icons/avatar-profile/422/avatar_tie_user_default_suit_display_business-512.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
        <% if !account_signed_in? %>
          <%= link_to "Log In", new_account_session_path, class: "dropdown-item" %>
          <%= link_to "Sign Up", new_account_registration_path, class: "dropdown-item" %>
        <% else %>
          <%= link_to "Log Out", destroy_account_session_path, class: "dropdown-item" %>
        <% end %>
        </div>
      </li>
    </ul>
  </div>
</div>
